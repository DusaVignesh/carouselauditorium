<%- include("header") -%>
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->

            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a href="./view-detail.html" class="app-brand-link">
                        <span class="menu-text fw-bolder ms-2" style="font-size: 18px;">RGUKT Auditorium Booking System</span>
                    </a>
                </div>
                <ul class="menu-inner py-1">
                    <li class="menu-item active">
                        <a href="./book-auditorium.html" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-store-alt"></i>
                            <div data-i18n="Account Settings">Book Auditorium</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="./view-detail.html" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-store-alt"></i>
                            <div data-i18n="Account Settings">View Details</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="#" class="menu-link"  data-bs-toggle="modal"
                        data-bs-target="#modalCenter">
                            <i class="menu-icon tf-icons bx bx-store-alt"></i>
                            <div data-i18n="Account Settings">Logout</div>
                        </a>
                    </li>
                </ul>
            </aside>
            <!-- / Menu -->

            <!-- Layout container -->
            <div class="layout-page">
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Auditorium /</span> Book Auditorium</h4>
                        <div class="col-xxl">
                            <div class="card mb-4">
                                <div class="card-header d-flex align-items-center justify-content-between">
                                    <h5 class="mb-0">Book Auditorium</h5>
                                </div>
                                <div class="card-body">
                                    <form action="" method="post">
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="StoreMainCategory">Auditorium</label>
                                            <div class="col-sm-10">
                                                <div class="input-group input-group-merge">
                                                    <select name="storemaincategory" id="storemaincategory" multiple style="width:100%">
                                                        <option value="1">SAC</option>
                                                        <option value="2">AB-I</option>
                                                        <option value="3">AB-II</option>
                                                        <option value="3">AB-III</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="Date">Date</label>
                                            <div class="col-sm-10">
                                                <div class="input-group input-group-merge">
                                                    <input type="date" class="form-control" id="Date" placeholder="date" aria-label="Date" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="Timing">Timing</label>
                                            <div class="col-sm-10">
                                                <div class="input-group input-group-merge">
                                                    <input type="text" class="form-control" id="Timing" placeholder="timing" aria-label="Timing" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="Seats">Seats</label>
                                            <div class="col-sm-10">
                                                <div class="input-group input-group-merge">
                                                    <input type="text" class="form-control" id="Seats" placeholder="no of seats" aria-label="Seats" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="Occussion">Occussion</label>
                                            <div class="col-sm-10">
                                                <div class="input-group input-group-merge">
                                                    <input type="text" class="form-control" id="Occussion" placeholder="occussion" aria-label="Occussion" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="image">Banner Image</label>
                                            <div class="col-sm-10">
                                                <div class="input-group input-group-merge">
                                                    <input type="file" id="image" class="form-control" />
                                                </div>
                                                <div class="form-text">Image Size : 100px x 100px</div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-10">
                                                <div class="input-group input-group-merge">
                                                    <!-- <textarea type="text" id="tiny" class="form-control" placeholder="text Editor" aria-label="Text Editor"></textarea> -->
                                                    <button type="submit" class="btn btn-primary" id="submit" name="submit" value="submit">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="modalCenterTitle">Do you want to Logout</h5>
                              <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"
                              ></button>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                Close
                              </button>
                              <button type="button" class="btn btn-primary">Logout</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    <!-- / Content -->

<%- include("footer") -%>