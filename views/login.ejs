<%- include("header") %>
    <link rel="stylesheet" href="css/style.css" />
    </head>

    <body>
        <!-- Layout wrapper -->
        <div class="layout-wrapper layout-content-navbar">
            <div class="layout-container">

                <!-- Layout container -->
                <div class="layout-page">
                    <!-- Navbar -->
                    <nav class="navbar navbar-example navbar-expand-lg navbar-light bg-light mt-3">
                        <div class="container-fluid">
                            <a class="navbar-brand" href="/">Auditorium Booking System</a>
                            <div class="collapse navbar-collapse" id="navbar-ex-2">
                                <ul class="navbar-nav ms-auto">
                                    <li><a class="nav-item nav-link" href="./">Home</a></li>
                                    <li><a class="nav-item nav-link" href="./about-us">About Us</a></li>
                                    <li><a class="nav-item nav-link" href="./contact-us">Contact Us</a></li>
                                    <li><a class="nav-item nav-link active" href="./login">Login</a></li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                    <!-- / Navbar -->

                    <!-- Content wrapper -->
                    <div class="content-wrapper">
                        <!-- Content -->

                        <div class="container-xxl flex-grow-1 container-p-y px-0">
                            <div class="col-xxl h-100">
                                <div class="card h-100 bg-primary">
                                    <div class="card-body p-3">
                                        <div class="row h-100">
                                            <div
                                                class="col-lg-7 d-flex flex-column justify-content-center align-items-center">
                                                <div class="w-75">
                                                    <h4 class="mb-4 text-white display-3">Rajiv Gandhi University of
                                                        Knowledge
                                                        Technologies-Basar
                                                    </h4>
                                                    <p class="mb-0" style="color: rgba(255, 255, 255, 0.664);">Hello
                                                        User,
                                                        Welcome to the Website
                                                        of
                                                        auditorium
                                                        booking. You can login and book
                                                        SAC anytime</p>
                                                </div>
                                            </div>
                                            <div class="col-lg-5">
                                                <div class="card border h-100">
                                                    <div
                                                        class="card-body p-5 d-flex  flex-column justify-content-center">
                                                        <p class="fs-5 fw-bold mb-5">Sign In</p>
                                                        <form action="/login" method="post">
                                                            <div class="row mb-3">
                                                                <label class="col-sm-3 col-form-label"
                                                                    for="Username">Username</label>
                                                                <div class="col-sm-9">
                                                                    <div class="input-group input-group-merge">
                                                                        <input type="text" class="form-control"
                                                                            id="Username" placeholder="username"
                                                                            aria-label="User Name" name="username" />
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <label class="col-sm-3 col-form-label"
                                                                    for="Password">Password</label>
                                                                <div class="col-sm-9">
                                                                    <div class="input-group input-group-merge">
                                                                        <input type="password" class="form-control"
                                                                            id="Password" placeholder="password"
                                                                            aria-label="Password" name="password" />
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row mb-5">
                                                                <div class="col-sm-10">
                                                                    <div class="input-group input-group-merge">
                                                                        <!-- <textarea type="text" id="tiny" class="form-control" placeholder="text Editor" aria-label="Text Editor"></textarea> -->
                                                                        <button type="submit" class="btn btn-primary"
                                                                            id="submit" name="submit"
                                                                            value="submit">Submit</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div
                                                                class="d-flex align-items-center justify-content-center pb-4">
                                                                <p class="mb-0 me-2">Don't have an account?</p>
                                                                <a href="./createAccount"
                                                                    class="btn btn-outline-danger">Create new</a>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- / Content -->
                    <%- include("footer") %>